@import 'nib'
global-reset();
*
  box-sizing: border-box;

html
body
  background-color: white;  
  font-family: Helvetica,arial,freesans,clean,sans-serif;
  font-size: 13px;
  color: #666;
  line-height: 1.6;
.container
  width: 740px;
  margin: 0 auto;
header.container
  margin-top: 10px;
  margin-bottom: 20px;
  min-height: 20px;
  & a
  & a:visited
    white-space: nowrap;
    text-decoration: none;
    color: #333;
  & a:hover
    color: white;
#app-footer
  border-top: 1px solid #E0E0E0;
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 100px;
  & .container
    margin-top: 20px;
    & p
      display: inline-block;
      vertical-align: top;
      margin: 10px 10px 0 0;
#username
  color: #4183C4;
  line-height: 22px;
  font-weight: bold;
  text-shadow: 0 1px 0 white;
  &:hover
    text-decoration: underline;
.page
  position: relative;
  width: 740px;
.page-container
  margin-bottom: 15px;
  padding: 3px;
  background: #EEE;
  border-radius: 4px;
.page-content
  padding: 10px;
  background: white;
  border: 1px solid #DDD;
  border-radius: 2px;
  position: relative;
.title
  font: 13px Helvetica,arial,freesans,clean,sans-serif;
  position: relative;
  font-size: 14px;
  font-weight: bold;
  color: #333;
#issue-title
  width: 49%;
  font-size: 16px;
  font-weight: bold;
  color: #444;
  box-sizing: border-box;
  margin-right: 5px;
  padding: 6px;
  color: #666;
  background-repeat: no-repeat;
  background-position: right center;
#issue-description
  margin-top: 15px;
  //margin-bottom: 70px;
.info-bar
  display: inline-block;
  margin: 15px 0 -10px;
  width: 100%;
  padding: 10px 10px 4px;
  border: 1px solid #E5E5E5;
  border-left: none;
  border-right: none;
  background: whiteSmoke;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 9px;
textarea
  box-sizing: border-box;
  width: 100%;
  padding: 5px;
  height: 150px;
  font-size: 12px;
.btn
  color: white;
  text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.4);
  background: #8ADD6D;
  background: -moz-linear-gradient(#8ADD6D,#60B044);
  background: -webkit-linear-gradient(#8ADD6D,#60B044);
  -ms-filter: "progid:DXImageTransform.Microsoft.gradient(startColorstr='#8add6d',endColorstr='#60b044')";
  box-shadow: 0 1px 4px rgba(0, 0, 0, 0.2);
  display: inline-block;
  padding: 8px 15px;
  line-height: normal;
  position: relative;
  font-size: 12px;
  font-weight: bold;
  border-radius: 3px;
  border: 1px solid;
  border-color: #74BB5A;
  border-bottom-color: #509338;
  &:hover
    background: #69D344;
    background: -moz-linear-gradient(#69D344,#4C8B36);
    background: -webkit-linear-gradient(#69D344,#4C8B36);
    -ms-filter: "progid:DXImageTransform.Microsoft.gradient(startColorstr='#69d344',endColorstr='#4c8b36')";
    border-color: #4A993E;
    color: white;
button#create-issue-button
  position: absolute;
  right: 5px;
#user-repos-select
  width: 49%;
  font-size: 16px;
  font-weight: bold;
  color: #444;
  box-sizing: border-box;
  padding: 6px 6px;
  color: #666;
  background-repeat: no-repeat;
  background-position: right center;
  border-color: rgba(102, 102, 102, 0.15);
  & option
    font-size: 12px;
    font-weight: normal;
#user-info
  color: #666;
  font-size: 16px;
  width: 100%;
  position: relative;
  & img
    width: 22px;
    vertical-align: -6px;
    margin: 0 3px 0 10px;
    border-radius: 11px;
#login, #logout
  color: #333;
  position: absolute;
  padding: 0 10px 0 10px;
  font-family: Helvetica,arial,freesans,clean,sans-serif;
  font-size: 13px;
  font-weight: bold;
  line-height: 24px;
  text-shadow: 0 1px 0 white;
  white-space: nowrap;
  border: 1px solid #D4D4D4;
  border-bottom-color: #BCBCBC;
  border-radius: 3px;
  background: #FAFAFA;
  background: -moz-linear-gradient(#FAFAFA,#EAEAEA);
  background: -webkit-linear-gradient(#FAFAFA,#EAEAEA);
  -ms-filter: "progid:DXImageTransform.Microsoft.gradient(startColorstr='#fafafa',endColorstr='#eaeaea')";
  cursor: pointer;
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
#logout
  right: 5px;
  bottom: -4px;
#login:hover, #logout:hover
  color: white;
  text-decoration: none;
  text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.3);
  border-color: #518CC6;
  border-bottom-color: #2A65A0;
  background: #599BDC;
  background: -moz-linear-gradient(#599BDC,#3072B3);
  background: -webkit-linear-gradient(#599BDC,#3072B3);
  -ms-filter: "progid:DXImageTransform.Microsoft.gradient(startColorstr='#599bdc',endColorstr='#3072b3')";
#chart-panel
  margin: 0 auto;
  width: 400px;
#poll-description
  margin-top: 10px;
  margin-bottom: 10px;
#yes, #no
  font-weight: bold;
.visible
  display: block;
.invisible
  display: none;