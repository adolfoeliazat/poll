  body
    header.container
      a(href="/")#home.visible
        svg(version="1.1", id="Layer_1", xmlns="http://www.w3.org/2000/svg", x="0px", y="0px", width="30px", height="30px", viewBox="0 0 100 100", enable-background="new 0 0 100 100")
